general {
    colors = true
    interval = 5
    color_good = "#50fa7b"
    color_degraded = "#f1fa8c"
    color_bad = "#ff5555"
}

# Ordem dos módulos na barra
order += "cpu_usage"
order += "memory"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "battery all"
order += "volume master"
order += "tztime local"

# Módulo de CPU
cpu_usage {
    format = " CPU: %usage "
}

# Módulo de RAM (Memória)
memory {
    format = " Mem: %used/%total "
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

# Módulo de Ethernet (Rede via cabo)
ethernet _first_ {
    # Se aparecer "Down", podes mudar _first_ para o nome da interface (ex: enp3s0)
    format_up = " 󰈁 %ip "
    format_down = " 󰈂 Down "
}

# Os outros módulos que já tinhas...
wireless _first_ {
    format_up = "  %essid "
    format_down = "  Down "
}

disk "/" {
    format = "  %avail "
}

battery all {
    format = " %status %percentage "
    status_chr = " "
    status_bat = " "
    status_full = " "
}

volume master {
    format = "  %volume "
    format_muted = "  Muted "
    device = "pulse"
}

tztime local {
    format = "  %H:%M   %d/%m/%Y "
}