{
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 5,

    "modules-left": ["custom/launcher","hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": [ "memory","cpu", "temperature", "custom/gpu_temp_usage", "wireplumber", "battery","hyprland/language", "bluetooth", "tray","nm-applet"],
    //, "backlight"
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-active": "<span color='#00ff00' size='larger'><b>{icon}</b></span>",
        "on-click": "activate",
        "icon-size": 10,
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        },
        "format-icons": {
            "1": "<span size='small'>1</span>",
            "2": "<span size='small'>2</span>",
            "3": "<span size='small'>3</span>",
            "4": "<span size='small'>4</span>",
            "5": "<span size='small'>5</span>"
        }
    },
    "nm-applet":{
        "format" : "{icon}"
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "wireplumber": {
        "format": "\udb81\udd7e",
        "max-volume": 100,
        "scroll-step": 5,
        "on-click": "pavucontrol"
    },
    "custom/powermenu": {
        "on-click": "$HOME/.config/waybar/scripts/wofipowermenu.py",
        "format": " ⏻ ",
        "tooltip": false
    },

    "custom/poweroff":{
        "format" : "\u23fb ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
                    "shutdown": "sudo shutdown",
                    "reboot": "sudo reboot",
                    "suspend": "systemctl suspend",
                    "hibernate": "systemctl hibernate"
                }
    },

    "battery": {
        "format": "{icon}",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾" , "󰁿", "󰂀", "󰂁", "󰂂","󰁹"],
        "format-charging": "󰂄",
        "interval": 3,
        "states": {
            "warning": 25,
            "critical": 10
        },
        "tooltip": true,
        "tooltip-format": "{capacity}%"
    },
    "backlight": {
        "format": "\udb80\udce0 {percent}%"
    },

    "memory": {
        "interval": 30,       
       // "format": "{short}",
        "format": "MEM: {used:0.1f}G"
    },

    "custom/gpu_temp_usage": {
    "exec": "$HOME/.config/waybar/scripts/gpu_temp_usage.sh",
    "interval": 5,
    "return-type": "text",
    "tooltip": false 
    },

    "temperature": {
        "format": "{temperatureC}°C" //\uef2a
    },

    "cpu": {
        "format": "CPU: {usage}%"
    },

    "custom/cpu": {
        "exec": "$HOME/.config/waybar/scripts/cpu_usage.sh",
        "interval": 5,
        "return-type": "json"
    },


    "network": {
        "format": "",
        "format-ethernet": "",
        "format-wifi": "{icon}",
        "format-disconnected": "\udb83\udc9c",
        "format-icons": ["\udb82\udd2f", "\udb82\udd1f", "\udb82\udd22", "\udb82\udd25", "\udb82\udd28"],
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-disconnected": "Disconnected"
	    // "on-click":"kitty -e nmtui"
    },

    "bluetooth": {
        "format": "\udb80\udcaf",
        "format-disabled": "\udb80\udcb2",
        "format-connected": "\udb80\udcb1",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click":"blueman-manager"
    },
    "hyprland/language": {
        "format": "{short}"

    },
    "tray": {
        "icon-size": 16,
        "spacing": 16
    },

// custons modulos left
    "hyprland/window": {
      "format": " {class}",
      "max-length": 20,
      "rewrite": {
        "^(?!.*\\S).*": ""
      }
    },
    "custom/launcher": {
      "format": " ",
      "on-click": " $HOME/.config/waybar/scripts/wofipowermenu.py", //wofi --show drun",
      "tooltip": false
    }
}